=render 'progress', num: 1
=simple_form_for @story do |f|
  Where did you go?
  = f.input :place_name
  City
  = f.input :city
  When did you go?
  = f.input :time1, as: :select, collection: ["Breakfast","Lunch","Dinner"], label: false
  = f.input :time2, as: :select, collection: ["Weekday","Weekend"], label: false
  = f.input :step, as: :hidden, input_html: { value: 2 }
  = f.submit "Next"
