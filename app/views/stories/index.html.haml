.images
  .header
    Latest Story Photos
  %ul
    -Story.where('visible is true').map(&:graphics).flatten.last(4).each do |graphic|
      %li
        =image_tag(graphic.upload.thumb.url)
%ul#linkbuttons
  - Story.where('storybook is not null').where('visible is true').reverse.each do |story|
    .left
      = image_tag(story.graphics.first.upload.thumb.url) if story.graphics.present?
    .right
      %h3
        = story.storybook
      = story.place_name
      %br
      = story.city

    %li= link_to 'Read story', story_path(story)
