%ul.images
  -@images.each_with_index do |image, index|
    %li.image
      =link_to image_tag(image.upload.small.url), image_path(image)
      .floater.visible{data: {width: image.width, height: image.height, left: image.posX, top: image.posY + index*450 + 80}}
        .caption
          =image.caption.try(&:html_safe)
