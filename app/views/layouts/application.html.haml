!!!
%html
  %head
    %title Gustr
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyBZ1M9CIeCufVkulo1zYFtJ-xZsYJD81sM&sensor=true&libraries=geometry,places"
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    = javascript_include_tag :modernizr
    %meta{:content => "initial-scale=1.0, user-scalable=no", :name => "viewport"}/
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
  %table#topbar{cellpadding: 0, cellspacing: 0}
    %td#left
      %span Settings
    %td#logo
      %span Gustr
    %td#icon
      %span search
    %td#stories.hover
      %span= link_to "Stories", stories_path
    %td#addstory
      %span= link_to "Add Story", new_story_path
    %td#link.hover
      - unless current_user
        %span=link_to "Sign in", new_user_session_path
        %span=link_to "Sign up", new_user_registration_path
  #content
    = yield
